<Window x:Class="Kursach.main_windows.admin.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить товар" Height="930" Width="500"
        Background="#FF2D2D30" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,15">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Изменение товара" FontSize="20" Margin="0,0,0,40" Foreground="#FFCCCCCC" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Название:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <TextBox x:Name="NameTextBox" Background="#FF3C3C3C" Foreground="White" 
                     BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Категория:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <ComboBox x:Name="CategoryComboBox" Background="#FF3C3C3C" Foreground="Black" 
                      BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
                      Margin="0,0,0,15"/>

            <TextBlock Text="Бренд:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <TextBox x:Name="BrandTextBox" Background="#FF3C3C3C" Foreground="White" 
         BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
         Margin="0,0,0,15"/>

            <TextBlock Text="Цена:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <TextBox x:Name="PriceTextBox" Background="#FF3C3C3C" Foreground="White" 
                     BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Количество:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <TextBox x:Name="QuantityTextBox" Background="#FF3C3C3C" Foreground="White" 
                     BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Размер:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <TextBox x:Name="SizeTextBox" Background="#FF3C3C3C" Foreground="White" 
                     BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Состав:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <TextBox x:Name="CompositionTextBox" Background="#FF3C3C3C" Foreground="White" 
                     BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Срок годности:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <TextBox x:Name="ShelfLifeTextBox" Background="#FF3C3C3C" Foreground="White" 
                     BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Время доставки:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <TextBox x:Name="DeliveryTimeTextBox" Background="#FF3C3C3C" Foreground="White" 
                     BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
                     Margin="0,0,0,20"/>
            <TextBlock Text="Минимальное количество:" FontSize="14" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
            <TextBox x:Name="MinStockLevelTextBox" Background="#FF3C3C3C" Foreground="White" 
         BorderBrush="#FF555555" BorderThickness="1" Padding="10" Height="40" 
         Margin="0,0,0,15"/>

            <Button Content="Сохранить изменения" Click="SaveChanges_Click" 
                    Background="#FF00A651" Foreground="White" 
                    Height="45" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>